<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wgutermtrackerjc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AddTerm"
            android:label="@string/title_activity_add_term"
            android:parentActivityName=".AllTerms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AssessmentView"
            android:label="@string/title_activity_assessment_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TermView"
            android:label="@string/title_activity_term_view"
            android:parentActivityName=".AllTerms"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseView"
            android:label="@string/title_activity_course_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AllTerms"
            android:label="@string/title_activity_all_terms"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.example.wgutermtrackerjc"
            android:name=".data.DBContentProvider"
            android:exported="false" />
    </application>

</manifest>