<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/list_assessment_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/list_assessment_item_assessment_name"
        android:textAppearance="?android:textAppearanceMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_assessment_item_due_date_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/list_assessment_item_due_date"
            android:textAppearance="?android:textAppearanceSmall" />

        <TextView
            android:id="@+id/list_assessment_item_due_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textAppearance="?android:textAppearanceSmall" />

    </LinearLayout>

</LinearLayout>